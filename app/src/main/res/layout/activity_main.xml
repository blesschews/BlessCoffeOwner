<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A52A2A"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:visibility="visible"
   >


    <ImageView
        android:id="@+id/icon_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:src="@drawable/blesscofee" />

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_view"
        android:layout_centerHorizontal="true"
        android:text="Login to see Today's Orders"
        android:textColor="#FFD700"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Welcome"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/Menu"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Menu"
            android:textColor="#FFFF00" />

        <Button
            android:id="@+id/link_to_login"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ReachUs"
            android:layout_alignLeft="@+id/ReachUs"
            android:layout_alignRight="@+id/ReachUs"
            android:layout_alignStart="@+id/ReachUs"
            android:layout_below="@+id/ReachUs"
            android:layout_marginTop="50dp"
            android:text="log in"
            android:textColor="#FFFF00" />


        <Button
            android:id="@+id/ReachUs"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Menu"
            android:layout_alignStart="@+id/Menu"
            android:layout_below="@+id/Menu"
            android:layout_centerVertical="true"
            android:layout_marginTop="50dp"
            android:text="Reach us"
            android:textColor="#FFFF00" />
    </LinearLayout>


    <TextView
        android:id="@+id/link_to_register"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="New to BlessCoffee? Register here"
        android:textColor="#ffffff"
        android:textSize="20dip" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />


</RelativeLayout>
